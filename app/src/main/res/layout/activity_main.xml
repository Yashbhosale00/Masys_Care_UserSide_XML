                        android:layout_marginRight="10dp"
                        android:backgroundTint="#ebf5fb"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="69dp"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:text="Logs"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Fourth CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#ebf5fb"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="69dp"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:text="Other"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Right side containing one LinearLayout -->
            <!-- Right side containing one LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Content for the LinearLayout on the right side -->

                <!-- ImageView -->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEATURING QUICK SUPPORT"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/chat"
                      android:layout_gravity="center"
                      android:layout_marginTop="10dp"/>

                <!-- TextView 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you have a questions?"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get resolution to your queries"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call now"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:backgroundTint="@color/buyyon"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Products"
        />

    <LinearLayout
